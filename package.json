{
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "npm run clean && lerna run build && npm run build:examples",
    "build:examples": "node scripts/build-examples.js",
    "clean": "shx rm -rf packages/*/lib",
    "dev": "run-p dev:*",
    "dev:examples": "browser-sync examples -w",
    "dev:packages": "lerna run --parallel dev",
    "publish": "lerna run build && lerna run test && lerna publish",
    "test:lint": "eslint .",
    "test:scripts": "jest",
    "test": "run-s test:*"
  },
  "devDependencies": {
    "@babel/core": "^7.13.14",
    "@babel/preset-env": "^7.13.12",
    "@jest/globals": "^26.6.2",
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@types/jest": "^26.0.22",
    "browser-sync": "^2.26.14",
    "eslint": "^7.23.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "fs-extra": "^9.1.0",
    "globby": "^11.0.3",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.44.0",
    "rollup-plugin-terser": "^7.0.2",
    "shx": "^0.3.3",
    "slash": "^3.0.0"
  }
